<h2>Add Team</h2>
<form action="/create" method="POST" class="form-horizontal" id="addStudentForm">
  <div class="form-group">
    <label for="team_name" class="col-sm-2 control-label">team name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="team_name" name="team_name" placeholder="team_name" required>
    </div>
  </div>
  <div class="form-group">
    <label for="last_name" class="col-sm-2 control-label">city</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="city" name="city"  placeholder="city" required>
    </div>
  </div>
  <div class="form-group">
    <label for="start_date" class="col-sm-2 control-label">average points</label>
    <div class="col-sm-10">
      <input type="text" class="offensive_average" id="offensive_average" name="offensive_average" placeholder="" required>
    </div>
  </div>
  <div class="form-group">
    <label for="logo" class="col-sm-2 control-label">logo</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="logo" name="logo" placeholder="">
    </div>
  </div>
  <div class="form-group">
    <label for="mascot" class="col-sm-2 control-label">mascot</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="mascot" name="mascot" placeholder="">
    </div>
  </div>

  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Add Student</button>
    </div>
  </div>
</form>
